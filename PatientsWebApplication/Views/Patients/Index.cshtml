@model IEnumerable<PatientsWebApplication.Models.Patient>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HHS Patient Database</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

</head>
<body>
    <h1 class="text-center h1">Hamilton Health Sciences Patient Database</h1>
<p>
    <button class="btn-default btn" onclick="location.href='@Url.Action("Create")'" type="button">Add Patient</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                System ID
            </th>
            <th>
               First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                Health Card Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SystemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HealthCardNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SystemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SystemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SystemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
